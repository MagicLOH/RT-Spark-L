from building import *
import os

cwd = GetCurrentDir()
group = []
src = Glob('*.c')
src += Glob('*.cpp')
CPPPATH = [cwd]

src += Glob('Font/*.c')
src += Glob('Image/*.c')

list = os.listdir(cwd)
for d in list:
    path = os.path.join(cwd, d)
    if os.path.isfile(os.path.join(path, 'SConscript')):
        group = group + SConscript(os.path.join(d, 'SConscript'))

group = group + DefineGroup('Resource', src, depend = ['PKG_USING_LVGL'], CPPPATH = CPPPATH)

Return('group')

