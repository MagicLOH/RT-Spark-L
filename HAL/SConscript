import os
import rtconfig
from building import *

Import('SDK_LIB')

cwd = GetCurrentDir()

# add general drivers
src = []
path =  [cwd]

src += Glob('*.c')

# add button hal
src += Glob('Button/HAL_button.c')
path += [cwd + '/Button']

#add lcd hal
if GetDepend(['BSP_USING_ONBOARD_LCD']):
    src += Glob('LCD/HAL_lcd.c')
    path += [cwd + '/LCD']

#add rtc hal
if GetDepend(['BSP_USING_ONCHIP_RTC']):
    src += Glob('RTC/HAL_rtc.c')
    path += [cwd + '/RTC']

#add sd hal
if GetDepend(['BSP_USING_SDCARD_FATFS']):
    src += Glob('SDCard/HAL_sdcard.c')
    path += [cwd + '/SDCard']
    

CPPDEFINES = ['STM32F407xx']
group = DefineGroup('Drivers', src, depend = [''], CPPPATH = path, CPPDEFINES = CPPDEFINES)

list = os.listdir(cwd)
for item in list:
    if os.path.isfile(os.path.join(cwd, item, 'SConscript')):
        group = group + SConscript(os.path.join(item, 'SConscript'))

Return('group')
